{
    "preset": "laravel",
    "rules": {
        "function_declaration": {
            "closure_fn_spacing": "none"
        },
        "not_operator_with_successor_space": false,
        "concat_space": {
            "spacing": "none"
        },
        "class_attributes_separation": {
            "elements": {
                "method": "one"
            }
        },
        "array_syntax": {
            "syntax": "short"
        },
        "list_syntax": {
            "syntax": "long"
        },
        "braces": {
            "position_after_functions_and_oop_constructs": "next"
        }
    }
}
